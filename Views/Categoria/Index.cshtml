@model IEnumerable<CatalogoDeDoces.Models.CategoriaModel>
@{
	Layout = "~/Views/Shared/_Layout.cshtml";
	ViewBag.Title = "Catálogo de Doces";
}

<div class="text-center">

	<div class="d-grid gap-2 d-md-flex justify-content-md-start">
		<a class="btn btn-primary" role="button" asp-controller="Categoria" asp-action="Criar">Adicionar nova Categoria</a>
	</div>

	<h1 class="display-4 mb-4"> Listagem de Categorias</h1>


	<table class="table mt-5" id="table-categorias">
		<thead>
			<tr>
				<th>
					@Html.DisplayNameFor(model => model.Nome)
				</th>
			</tr>
		</thead>
		<tbody>
			@if (Model != null && Model.Any())
			{
				foreach (CategoriaModel categoria in Model)
				{
					<tr>
						<td>
							@Html.DisplayFor(modelItem => categoria.Nome)
						</td>
						<td>
							<div class="btn-group" role="group">
								<a role="button" class="btn btn-primary" asp-route-id="@categoria.Id" asp-controller="Categoria" asp-action="Editar">Editar</a>
								<a role="button" class="btn btn-danger" asp-route-id="@categoria.Id" asp-controller="Categoria" asp-action="Deletar">Apagar</a>
							</div>
						</td>
					</tr>
				}
			}
			else
			{
				<tr class="odd"><td valign="top" colspan="5">Nenhum produto encontrado</td></tr>
			}
		</tbody>
	</table>
</div>