@model CatalogoDeDoces.Models.RedefinirSenhaModel

@{
    ViewData["Title"] = "Nova Senha";
}

<h2>Redefinir Senha</h2>

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger">@TempData["MensagemErro"]</div>
}

<form asp-action="NovaSenha" method="post">
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="Email" />

    <div class="form-group">
        <label asp-for="NovaSenha"></label>
        <input asp-for="NovaSenha" class="form-control" />
        <span asp-validation-for="NovaSenha" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ConfirmarSenha"></label>
        <input asp-for="ConfirmarSenha" class="form-control" />
        <span asp-validation-for="ConfirmarSenha" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Salvar nova senha</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
