@model ProdutoModel
@{
	ViewData["title"] = "Listagem de produtos";

}

<div class="text-center">
	<h1 class="display-4"> Adicionar Produtos </h1>
</div>

<form asp-controller="Produto" asp-action="Criar" method="post" enctype="multipart/form-data">
	@Html.AntiForgeryToken()

	<div class="form-group">
		<label for="nome">Nome</label>
		<input type="text" asp-for="Nome" class="form-control" placeholder="Digite o nome do produto">
		<span asp-validation-for="Nome" class="text-danger"></span>
	</div>

	<div class="form-group">
		<label for="descrição">Descrição</label>
		<input type="text" asp-for="Descricao" class="form-control" placeholder="Digite a descrição do produto">
		<span asp-validation-for="Descricao" class="text-danger"></span>
	</div>

	<div class="form-group">
		<label for="preço">Preço</label>
		<input type="text" asp-for="Preco" class="form-control" placeholder="Informe o preço do produto">
		<span asp-validation-for="Preco" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label for="arquivoImagem">Imagem</label>
		<input asp-for="ArquivoImagem" type="file" class="form-control" accept="image/*" />
		<span asp-validation-for="ArquivoImagem" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label for="categoria">Categoria</label>
		<select asp-for="CategoriaId" asp-items="@(ViewBag.Categorias)" class="form-control">
			<option value="">Selecione uma categoria</option>
		</select>
	</div>


	<button type="submit" class="btn btn-primary  w-100">Adicionar</button>
	<a class="btn btn-secondary w-100 " asp-controller="Produto" asp-action="Index" role="button">Voltar</a>

</form>

@section Scripts {
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
	<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
